{
  "name": "@uconnect/offloop",
  "version": "0.1.1",
  "description": "Cross-platform offline storage library for Web and React Native",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"tests/**/*.ts\"",
    "prepare": "npm run build",
    "test-env": "vite -c test-environment/vite.config.js"
  },
  "keywords": [
    "storage",
    "offline",
    "react-native",
    "web",
    "typescript"
  ],
  "author": "Uconnect",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^0.34.0"
  },
  "peerDependencies": {
    "@react-native-async-storage/async-storage": ">=1.0.0"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@react-native-community/netinfo": "^11.4.1",
    "@uconnect/offloop": "file:uconnect-offloop-0.1.1.tgz",
    "@vitest/coverage-c8": "^0.33.0",
    "bare-events": "^2.5.0",
    "build": "^0.1.4",
    "react-native-web": "^0.19.13"
  }
}
